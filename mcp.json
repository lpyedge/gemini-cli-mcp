{
  "version": "0.2.4",
  "name": "gemini-cli-mcp",
  "description": "MCP manifest describing the Gemini CLI MCP surface exposed by this extension",
  "tools": [
    {
      "name": "dev.summarizeCode",
      "title": "Summarize Code",
      "description": "Generate a short summary of the specified source file or code snippet (3-5 sentences or bullet points).",
      "arguments": {
        "type": "object",
        "properties": {
          "inputType": { "type": "string", "enum": ["path", "text"], "default": "path" },
          "path": { "type": "string" },
          "content": { "type": "string" }
        },
        "required": ["inputType"]
      },
      "returns": { "type": "object", "properties": { "summary": { "type": "string" } } },
      "metadata": { "autoInvoke": true }
    },
    {
      "name": "dev.explainSnippet",
      "title": "Explain Snippet",
      "description": "Provide a step-by-step or line-by-line explanation of the given code snippet.",
      "arguments": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "language": { "type": "string" }
        },
        "required": ["content"]
      },
      "returns": { "type": "object", "properties": { "explanation": { "type": "string" } } },
      "metadata": { "autoInvoke": true }
    },
    {
      "name": "dev.generateComments",
      "title": "Generate Comments",
      "description": "Insert detailed comments and documentation for the selected code. Returns the code with inline and/or header comments added.",
      "arguments": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "language": { "type": "string", "default": "auto" },
          "style": { "type": "string", "enum": ["brief", "detailed"], "default": "detailed" }
        },
        "required": ["content"]
      },
      "returns": { "type": "object", "properties": { "commentedCode": { "type": "string" } } },
      "metadata": { "autoInvoke": true }
    },
    {
      "name": "dev.refactorCode",
      "title": "Refactor Code",
      "description": "Refactor the provided code according to the requested goal (e.g. split function, improve performance). Returns refactored code or a diff.",
      "arguments": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "goal": { "type": "string" },
          "format": { "type": "string", "enum": ["full", "diff"], "default": "full" }
        },
        "required": ["content","goal"]
      },
      "returns": { "type": "object", "properties": { "refactored": { "type": "string" }, "diff": { "type": "string" } } },
      "metadata": { "autoInvoke": true }
    },
    {
      "name": "dev.extractInterface",
      "title": "Extract Interface",
      "description": "Infer and extract an interface or type definition from the given implementation code. Returns the generated interface/type text.",
      "arguments": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "target": { "type": "string", "enum": ["TypeScript","Go","Java"], "default": "TypeScript" }
        },
        "required": ["content"]
      },
      "returns": { "type": "object", "properties": { "interface": { "type": "string" } } },
      "metadata": { "autoInvoke": true }
    },
    {
      "name": "dev.generateTests",
      "title": "Generate Tests",
      "description": "Generate unit tests for the provided code, targeting a specified test framework.",
      "arguments": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "framework": { "type": "string", "default": "node:test" },
          "language": { "type": "string", "default": "auto" }
        },
        "required": ["content"]
      },
      "returns": { "type": "object", "properties": { "tests": { "type": "string" } } },
      "metadata": { "autoInvoke": true }
    },
    {
      "name": "dev.translateCode",
      "title": "Translate Code",
      "description": "Translate code from one language to another while preserving functionality; returns translated code and optional notes about assumptions.",
      "arguments": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "targetLanguage": { "type": "string" },
          "notes": { "type": "boolean", "default": true }
        },
        "required": ["content","targetLanguage"]
      },
      "returns": { "type": "object", "properties": { "translated": { "type": "string" }, "notes": { "type": "string" } } },
      "metadata": { "autoInvoke": true }
    }
    ,
    {
      "name": "web.findCodeExample",
      "title": "Find Code Example",
      "description": "Search the public web for code examples that implement a requested feature or API; useful as implementation reference.",
      "arguments": {
        "type": "object",
        "properties": {
          "query": { "type": "string" },
          "language": { "type": "string" },
          "maxResults": { "type": "integer", "default": 5 },
          "includeSnippets": { "type": "boolean", "default": true }
        },
        "required": ["query"]
      },
      "returns": {
        "type": "object",
        "properties": {
          "results": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "snippet": { "type": "string" },
                "url": { "type": "string" },
                "source": { "type": "string" }
              }
            }
          }
        }
      },
      "metadata": { "autoInvoke": true }
    },
    {
      "name": "web.findLibraryUsage",
      "title": "Find Library / Component Usage",
      "description": "Search the web for documentation, usage examples, and API references for a given library, component, or plugin.",
      "arguments": {
        "type": "object",
        "properties": {
          "packageName": { "type": "string" },
          "query": { "type": "string" },
          "maxResults": { "type": "integer", "default": 10 },
          "includeDocs": { "type": "boolean", "default": true }
        },
        "required": ["packageName"]
      },
      "returns": {
        "type": "object",
        "properties": {
          "package": { "type": "string" },
          "matches": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "summary": { "type": "string" },
                "url": { "type": "string" },
                "kind": { "type": "string", "description": "e.g., docs, example, repo, blog" }
              }
            }
          }
        }
      },
      "metadata": { "autoInvoke": true }
    }
  ],
  "resources": [
    {
      "name": "taskLog",
      "uriTemplate": "tasks://{taskId}/log",
      "description": "URI template for task logs"
    },
    {
      "name": "taskSummary",
      "uriTemplate": "tasks://{taskId}/summary",
      "description": "URI template for task summaries"
    }
  ]
}
